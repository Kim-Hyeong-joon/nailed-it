                        input(type="text", name="todo4", placeholder="4.", value=user.todos[3].todo, data-id=user.todos[3]._id, disabled=user.todos[3].disabled, autocomplete="off", spellcheck="false")
                        button ✔️
                else 
                    div.todo-form__todo
                        input(type="text", name="todo4Trigger", placeholder="행동계기 4" autocomplete="off", spellcheck="false")
                        input(type="text", name="todo4", placeholder="4.", autocomplete="off", spellcheck="false")
