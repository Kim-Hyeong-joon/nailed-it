                        button ✔️
                else 
                    div.todo-form__todo
                        input(type="text", name="todo5Trigger", placeholder="행동계기 5" autocomplete="off", spellcheck="false")
                        input(type="text", name="todo5", placeholder="5.", autocomplete="off", spellcheck="false")
                        button ✔️
                input(type="submit" value="저장하기")#submitTodo
        div.percentage-box
            canvas(width="300", height="300")#percentChart
            span 0%
    
    div.detail-box
        div.detail-form
        div.detail-chart
            canvas(width="300", height="300")#detailCanvas
            span
    div#updateChart
    div#destroyChart

block scripts 
