extends base

block content
    div.todo-box
        div
            span 해낼 일
            form(method="POST", action="/todos").todo-form
                if user.todos[0]
                    div.todo-form__todo
                        input(type="text", name="todo1Trigger", placeholder="구체적으로 언제, 어디서 할지 적어보세요!", value=user.todos[0].todoTriggerValue autocomplete="off", spellcheck="false" disabled=user.todos[0].disabled)
                        input(type="text", name="todo1", placeholder="첫번째는 쉬운 일로 시작해보세요!", value=user.todos[0].todo, data-id=user.todos[0]._id, disabled=user.todos[0].disabled, autocomplete="off", spellcheck="false")
                        button ✔️
                else 
                    div.todo-form__todo
                        input(type="text", name="todo1Trigger", placeholder="구체적으로 언제, 어디서 할지 적어보세요!" autocomplete="off", spellcheck="false")
                        input(type="text", name="todo1", placeholder="첫번째는 쉬운 일로 시작해보세요!", autocomplete="off", spellcheck="false")
                        button ✔️
                if user.todos[1]
                    div.todo-form__todo
                        input(type="text", name="todo2Trigger", placeholder="행동계기 2", value=user.todos[1].todoTriggerValue autocomplete="off", spellcheck="false" disabled=user.todos[1].disabled)
                        input(type="text", name="todo2", placeholder="2.", value=user.todos[1].todo, data-id=user.todos[1]._id, disabled=user.todos[1].disabled, autocomplete="off", spellcheck="false")
