                else 
                    div.todo-form__todo
                        input(type="text", name="todo2Trigger", placeholder="행동계기 2" autocomplete="off", spellcheck="false")
                        input(type="text", name="todo2", placeholder="2.", autocomplete="off", spellcheck="false")
                        button ✔️
                if user.todos[2]
                    div.todo-form__todo
                        input(type="text", name="todo3Trigger", placeholder="행동계기 3", value=user.todos[2].todoTriggerValue autocomplete="off", spellcheck="false" disabled=user.todos[2].disabled)
